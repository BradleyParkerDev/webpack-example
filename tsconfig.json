{
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"rootDir": "./src",
		"outDir": "./dist",
    "sourceMap": true,
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"typeRoots": ["./node_modules/@types", "./src/types"],
		"noUnusedParameters": false,
    "allowJs": true,
    "checkJs": false // If you don't want to check JavaScript types
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"]
}
  